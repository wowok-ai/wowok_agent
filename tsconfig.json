{
  "compilerOptions": {
    "target": "ES2020",            
    "module": "NodeNext",           
    "moduleResolution": "NodeNext", 
    "lib": ["ES2020", "DOM"],   

    "declaration": true,           
    "declarationDir": "dist", 
    "declarationMap": true,        

    "outDir": "dist",               
    "rootDir": "src",            
    "sourceMap": true,             

    "strict": true,                 
    "noImplicitAny": true,         
    "skipLibCheck": true,           

    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./dist/*"]
    },            
    //"incremental": true          
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/__tests__/*",              // 排除测试文件‌:ml-citation{ref="4,7" data="citationList"}
    "dist"
  ]
}
